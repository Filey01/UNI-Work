w_0_init = (3.5825118) # Initial weight of the aircraft
A = 0.86 # A set constant
C = -0.05 # A set constant
wp= (0.27557783) # Payload weight
w0=w_0_init

# Raymer's equation, iterated i times
for i in range(100):
  w0=w_0_init

  w_0_init = wp / (1 - (A * w0 ** C))
    
  print(f"Iteration {i+1}: w0 = {w0}")
